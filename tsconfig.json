{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "composite": true,
    "incremental": true,
    "allowJs": true
  },
  "files": [],
  "references": [
    { "path": "./apps/web" },
    { "path": "./packages/game-engine" }
  ],
  "exclude": ["node_modules", "**/node_modules", "**/.next", "**/dist"]
}
